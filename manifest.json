{
  "manifest_version": 3,
  "name": "LinkedIn GitHub Sync",
  "version": "1.1",
  "description": "Sync GitHub projects to LinkedIn with AI-powered descriptions.",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "https://generativelanguage.googleapis.com/*",
    "*://*.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
